                dataOnOff=JSON.stringify({ "cmd": 3, "param": { "Member": device.gateway_id, "Device": device.device_id, "Ctrl": 2, "V": 1 } })
            }
            ws.send(dataBright)
            ws.send(dataOnOff)
        } else if (type=='schedule') {
            for (const dev of device) {
                ws.send(JSON.stringify({
